@model List<ASK_BD1.Models.Question>

@{
    ViewBag.Title = "Questions";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var division = ViewBag.division;
}

<div class="container py-5 mt-5">
    <div class="row mb-4">
        <h1>Latest Questions @if(division != null) { <text>Filtered by @division</text>}</h1>
    </div>
    @if (Model.Count == 0)
    {
        <p style="color: red">There is no questions at the moment :(</p>
    }
    @foreach (var question in Model)
    {
        @Html.Partial("question", question)
    }
</div>